{
  "name": "AI Reply Assistant",
  "description": "AI-powered reply generator for Gmail and LinkedIn",
  "version": "1.1",
  "manifest_version": 3,
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": [
    "http://localhost:8080/*",
    "*://mail.google.com/*",
    "*://www.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [
        "*://mail.google.com/*",
        "*://www.linkedin.com/*"
      ],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": [
        "*://mail.google.com/*",
        "*://www.linkedin.com/*"
      ]
    }
  ],
  "action": {
    "default_title": "AI Reply Assistant"
  }
}
